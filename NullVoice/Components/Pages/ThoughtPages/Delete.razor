@page "/thoughts/delete"
@using Microsoft.EntityFrameworkCore
@using NullVoice
@inject IDbContextFactory<NullVoice.Data.NullVoiceContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Thought</h2>
    <hr />
    @if (thought is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Contents</dt>
            <dd class="col-sm-10">@thought.Contents</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">SentDate</dt>
            <dd class="col-sm-10">@thought.SentDate</dd>
        </dl>
        <EditForm method="post" Model="thought" OnValidSubmit="DeleteThought" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(thought is null)">Delete</button> |
            <a href="/thoughts">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Thought? thought;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        thought = await context.Thought.FirstOrDefaultAsync(m => m.Id == Id);

        if (thought is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteThought()
    {
        using var context = DbFactory.CreateDbContext();
        context.Thought.Remove(thought!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/thoughts");
    }
}
